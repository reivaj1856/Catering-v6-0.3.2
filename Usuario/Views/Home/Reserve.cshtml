@{
    ViewBag.Title = "Reservas para Eventos";
}

<main>
    <div class="d-flex align-items-center bg-light rounded-4 p-3 h-100" onclick="selectCard(this)">Cumpleaños</div>

    <!-- Contenido de la página -->
    <div class="container my-4">
        <div class="mb-0" id="eventos">
            <div class="row row-cols-1 row-cols-md-3 mb-4">
                <div class="col mb-4 mb-md-0">
                    <div class="d-flex align-items-center bg-light rounded-4 p-3 h-100">Cumpleaños</div>
                </div>
                <div class="col mb-4 mb-md-0">
                    <div class="d-flex align-items-center bg-light rounded-4 p-3 h-100">Matrimonios</div>
                </div>
                <div class="col">
                    <div class="d-flex align-items-center bg-light rounded-4 p-3 h-100">Eventos corporativos</div>
                </div>
            </div>
            <div class="row row-cols-1 row-cols-md-3">
                <div class="col mb-4 mb-md-0">
                    <div class="d-flex align-items-center bg-light rounded-4 p-3 h-100">Graduaciones</div>
                </div>
                <div class="col mb-4 mb-md-0">
                    <div class="d-flex align-items-center bg-light rounded-4 p-3 h-100">Fiestas infantiles</div>
                </div>
                <div class="col">
                    <div class="d-flex align-items-center bg-light rounded-4 p-3 h-100">Aniversarios</div>
                </div>
            </div>
        </div>
        <!-- Paso 1: Tipos de eventos -->
        <div class="row row-cols-1 row-cols-md-3 mb-4" id="eventos">
            <div class="col mb-3">
                <button class="btn btn-outline-primary w-100" onclick="mostrarInvitados('Cumpleaños')">Cumpleaños</button>
            </div>
            <div class="col mb-3">
                <button class="btn btn-outline-primary w-100" onclick="mostrarInvitados('Matrimonios')">Matrimonios</button>
            </div>
            <div class="col mb-3">
                <button class="btn btn-outline-primary w-100" onclick="mostrarInvitados('Eventos corporativos')">Eventos corporativos</button>
            </div>
            <div class="col mb-3">
                <button class="btn btn-outline-primary w-100" onclick="mostrarInvitados('Graduaciones')">Graduaciones</button>
            </div>
            <div class="col mb-3">
                <button class="btn btn-outline-primary w-100" onclick="mostrarInvitados('Fiestas infantiles')">Fiestas infantiles</button>
            </div>
            <div class="col mb-3">
                <button class="btn btn-outline-primary w-100" onclick="mostrarInvitados('Aniversarios')">Aniversarios</button>
            </div>
        </div>

        <!-- Paso 2: Cantidad de invitados -->
        <div class="row row-cols-2 row-cols-md-6 mb-4" id="invitados" style="display:none;">
            <div class="col mb-2"><button class="btn btn-outline-success w-100" onclick="mostrarMenu(70)">70</button></div>
            <div class="col mb-2"><button class="btn btn-outline-success w-100" onclick="mostrarMenu(100)">100</button></div>
            <div class="col mb-2"><button class="btn btn-outline-success w-100" onclick="mostrarMenu(150)">150</button></div>
            <div class="col mb-2"><button class="btn btn-outline-success w-100" onclick="mostrarMenu(200)">200</button></div>
            <div class="col mb-2"><button class="btn btn-outline-success w-100" onclick="mostrarMenu(250)">250</button></div>
            <div class="col mb-2"><button class="btn btn-outline-success w-100" onclick="mostrarMenu(300)">300</button></div>
        </div>

        <!-- Paso 3: Galería del menú -->
        <section class="page-section bg-light" id="galeria" style="display:none;">
            <div class="container">
                <div class="text-center">
                    <h2 class="section-heading text-uppercase">Galería de Menú</h2>
                    <h3 class="section-subheading text-muted">Conoce algunos de nuestros trabajos más destacados.</h3>
                </div>
                <div class="row">
                    <div class="col-lg-4 col-sm-6 mb-4">
                        <div class="portfolio-item">
                            <img class="img-fluid" src="~/assets/img/portfolio/11.jpg" alt="Montaje elegante de mesa" />
                            <div class="portfolio-caption">
                                <div class="portfolio-caption-heading">Banquete Formal</div>
                                <div class="portfolio-caption-subheading text-muted">Eventos Corporativos</div>
                            </div>
                        </div>
                    </div>
                    <!-- Agrega más imágenes según necesites -->
                </div>
            </div>
        </section>
    </div>
    <script src="@Url.Content("~/bundles/complementos")"></script>

</main>
